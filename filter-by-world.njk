---
pagination:
  data: collections.allWorlds
  size: 1
  alias: world
permalink: "medium/world/{{ world | slugify }}/"
---

{% extends "layouts/base.njk" %}

{% block content %}

<div id="regular-content">
  
  <div class="grid">
    <div class="grid-item double world-icon">
        {% set worldData = {} %}
        {% for person in worlds %}
          {% if person.name == world %}
            {% set worldData = person -%}
          {% endif %}
        {% endfor %}
        <figure class="image" class="world">
            <img src="{{ worldData.featured_image }}">
        </figure>
    </div>
    <div class="grid-item double-second world-about">
      <h1>
        <figure class="image world mobile">
            <img src="{{ worldData.featured_image }}">
        </figure>
        {{ world }}
      </h1>
      <p>{{ worldData.extended_description | safe }}</p>
      <p><a href="{{ worldData.link }}" style="border-bottom: 1px solid rgba(0,0,0,0.15)">{{ worldData.link }}</a> â†—</p>
    </div>
  </div>

  <div class="grid">

    {% for e in collections.all %}
      {% if e.data.world and e.data.world.includes(world) %}
      {% if e.data.draft == true %}
        <div class="grid-item">
            <figure class="image">
                <img src="/assets/media/empty.png" class="border">
            </figure>
            <div class="title gray">
                {{ e.data.title }}
            </div>
            <div class="gray">
                {{ e.data.subtitle }}
            </div>
        </div>
      {% else %}
        <div class="grid-item">
          <a href="{{ e.url }}">
            <figure class="image">
                <img src="{{ e.data.featured_image }}" class="{{ e.data.featured_solar }} {{ e.data.featured_border }}">
            </figure>
          </a>
          <a href="{{ e.url }}">
            <div class="title">
                {{ e.data.title }}
            </div>
            <div class="gray">
                {{ e.data.subtitle }}
            </div>
          </a>
        </div>
        {% endif %}
      {% endif %}
    {% endfor %}

  </div>

  {% include "layouts/footer.njk" %}

  <script>
      document.title = "Laurel Schwulst ... part of: {{ world }}";
  </script>

</div>

{% endblock %}