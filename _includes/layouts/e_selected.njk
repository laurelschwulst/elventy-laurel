<h1>Selected Projects</h1>

<div class="grid">
  
  {% for e in e_selected %}
    <div class="grid-item">
      {% if e.data.featured_image.length > 0 %}
        <a href="{{ e.url }}">
          <figure class="image">
              <img src="{{ e.data.featured_image }}">
          </figure>
        </a>
      {% endif %}
      <a href="{{ e.url }}">
        <div class="title">
            {{ e.data.title }}
            <div class="gray">{{ e.data.subtitle }}</div>
        </div>
      </a>
    </div>
  {% endfor %}

</div>

<footer class="small">
  This website is an expanding index, forever in the making, etc.
</footer>