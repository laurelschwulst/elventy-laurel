      <a href="/i/bio/index.html">biography</a><br>
      <a href="/i/contact/index.html">contact</a>
    </h1>
</div>

    {% for e in e_all_random %}
        {% if e.data.draft == true %}
            <div class="grid-item">
                <figure class="image">
                <img src="/assets/media/empty.png" class="border">
                </figure>
                <div class="title gray">
                    {{ e.data.title }}
                </div>
                <div class="gray">
                    {{ e.data.subtitle }}
                </div>
            </div>
        {% else %}
        <div class="grid-item" style="margin-top: 1em;">
        <a href="{{ e.url }}">
            <figure class="image">
                <img src="{{ e.data.featured_image }}">
            </figure>
        </a>
        <a href="{{ e.url }}">
            <div class="title">
                {{ e.data.title }}
                <div class="gray">{{ e.data.subtitle }}</div>
            </div>
        </a>
        </div>
    {% endif %}
  {% endfor %}

</div>

