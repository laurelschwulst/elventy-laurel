---
layout: layouts/base.njk
pagination:
  data: collections.allCollaborators
  size: 1
  alias: collaborator
permalink: "with/{{ collaborator | slugify }}/"
---

<div id="regular-content">
  
  <div class="grid">
    <div class="grid-item double">
      <h1 style="margin-bottom: 0.5em;">
        <span class="gray">with:</span>
        {{ collaborator }}
      </h1>
    </div>
    <div class="grid-item">
      {% set collaboratorData = {} %}
      {% for person in collaborators %}
        {% if person.name == collaborator %}
          {% set collaboratorData = person -%}
        {% endif %}
      {% endfor %}
      <p><a href="{{ collaboratorData.link }}" style="border-bottom: 1px solid rgba(0,0,0,0.15)">{{ collaboratorData.link }}</a> â†—</p>
    </div>
  </div>

  <div class="grid">

    {% for post in collections.all %}
      {% if post.data.collaborator and post.data.collaborator.includes(collaborator) %}
      <div class="grid-item">
        <a href="{{ post.url }}">
          <figure class="image">
              <img src="{{ post.data.featured_image }}">
          </figure>
        </a>
        <a href="{{ post.url }}">
          <div class="title">
              {{ post.data.title }}
          </div>
        </a>
      </div>
      {% endif %}
    {% endfor %}

  </div>

</div>